{% extends '::layout.html.twig' %}

{% block content -%}

        <h1>Мои портфели</h1>

        <table cellspacing="0" cellpadding="2">
            <thead>
            <tr>
                <th>№</th>
                <th>Наименование</th>
                <th colspan="2">Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td width="20"><a href="{{ path('portfolio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td width="300">{{ entity.name }}</td>
                    <td width="100"><a href="{{ path('portfolio_show', { 'id': entity.id }) }}">Посмотреть</a></td>
                    <td width="100"><a href="{{ path('portfolio_edit', { 'id': entity.id }) }}">Редактировать</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('portfolio_new') }}">
            Создать новый портфель
        </a>



    {% endblock %}
