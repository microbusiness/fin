<h1>Компании в портфеле</h1>

<table cellspacing="0" cellpadding="2">
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Площадка</th>
            <th>Код компании</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.codeMarket }}</td>
            <td>{{ entity.codeCompany }}</td>
            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">Посмотреть</a></td>
            <td><a href="{{ path('company_edit', { 'id': entity.id }) }}">Редактировать</a></td>

        </tr>
    {% endfor %}
    </tbody>
</table>


